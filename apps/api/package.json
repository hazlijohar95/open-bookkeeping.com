{
  "name": "@open-bookkeeping/api",
  "description": "Open Bookkeeping tRPC API backend with Hono",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch --env-file=../../.env src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --external:postgres",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.53",
    "@ai-sdk/openai": "^2.0.76",
    "@ai-sdk/react": "^2.0.106",
    "@asteasolutions/zod-to-openapi": "7.3.0",
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/trpc-server": "^0.3.2",
    "@open-bookkeeping/db": "workspace:*",
    "@sentry/node": "^10.28.0",
    "@supabase/supabase-js": "^2.87.1",
    "@trpc/server": "^11.1.2",
    "@upstash/redis": "^1.35.7",
    "ai": "^5.0.106",
    "bullmq": "^5.65.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.0",
    "superjson": "^2.2.1",
    "uuid": "^13.0.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.15"
  }
}
